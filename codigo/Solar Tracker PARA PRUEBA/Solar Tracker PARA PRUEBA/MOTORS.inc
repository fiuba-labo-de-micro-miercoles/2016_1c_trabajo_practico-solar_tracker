	OUTPUT	OCR1AL,AUX
	OUTPUT	OCR1BL,AUX

	INPUT AUX,PORTD
	ANDI AUX,(~((1<<MOT_1)|(1<<MOT_2)))
	ORI AUX,((0<<MOT_1)|(0<<MOT_2))			;CHEQUEAR CUANDO SE CONECTE
