LIGHT_TURN_ON:
	PUSH AUX
	PUSHI SREG

	BRTS ORDEN_BT_NO_HACER_NADA		;SI [T=1]: ESTA CONECTADO A BT
	INPUT AUX,PORTB
	ORI AUX,(1<<LIGHT_PIN)
	OUTPUT PORTB,AUX

ORDEN_BT_NO_HACER_NADA:
	POPI SREG
	POP AUX
RET

LIGHT_TURN_OFF:
	PUSH AUX
	PUSHI SREG		

	BRTS ORDEN_BT_NO_HACER_NADA		;SI [T=1]: ESTA CONECTADO A BT
	INPUT AUX,PORTB
	ANDI AUX,(~(1<<LIGHT_PIN))
	OUTPUT PORTB,AUX

	POPI SREG
	POP AUX

RET